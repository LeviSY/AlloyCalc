<Window x:Class="AlloyCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlloyCalc"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="720">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="resources/background.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Button Content="Alloy Calculator" HorizontalAlignment="Center" Margin="0,0,0,37" Width="150" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,0.5" Click="Button_Click" Height="50" IsDefault="True" />
    </Grid>
</Window>
